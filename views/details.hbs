<body>
  <div class="container">
    <header>
      {{> header}}
    </header>
    <main>
      {{> cubeDetails}}

      {{#if accessories}}
      {{#each accessories}}
      {{> accessory}}
      {{/each}}
      {{/if}}
      <h2>Accessories</h2>
      {{#unless accessories}}
      <h3 class="italic">This cube has no accessories yet...</h3>
      {{/unless}}
    </main>
  </div>
  {{> footer}}
</body>